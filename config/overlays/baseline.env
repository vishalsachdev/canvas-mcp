# Baseline overlay: defaults for contributors/early adopters.
# Merge with env.template to build `.env`.

# Bind settings are reserved for future HTTP transport (ignored in stdio mode).
MCP_BIND_HOST=127.0.0.1
MCP_BIND_PORT=8000

# Code execution sandbox defaults (best-effort; CPU limit in seconds).
ENABLE_TS_SANDBOX=true
TS_SANDBOX_MODE=auto
TS_SANDBOX_BLOCK_OUTBOUND_NETWORK=true
TS_SANDBOX_CPU_LIMIT=20
TS_SANDBOX_MEMORY_LIMIT_MB=256
TS_SANDBOX_TIMEOUT_SEC=20

# Privacy/logging (some flags are placeholders)
LOG_LEVEL=INFO
LOG_API_REQUESTS=false
LOG_REDACT_PII=true
LOG_ROTATION_DAYS=30
ENABLE_DATA_ANONYMIZATION=true
